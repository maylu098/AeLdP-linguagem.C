#include <stdio.h>

int main() {
    
    int num1, num2, soma, sub, multi, divi, resto;

    
    printf("Escreva o primeiro número: ");
    scanf("%d", &num1);

    printf("Escreva o segundo número: ");
    scanf("%d", &num2);

   
    soma = num1 + num2;
    sub = num1 - num2;
    multi = num1 * num2;

      if (num2 != 0) {
        divi = num1 / num2;
        resto = num1 % num2;

   
        printf("A soma é %d\n", soma);
        printf("A subtração é %d\n", sub);
        printf("A multiplicação é %d\n", multi);
        printf("A divisão é %d\n", divi);
        printf("O resto é %d\n", resto);
    } else {
        printf("Erro: divisão por zero não é permitida.\n");
    }

    return 0;
}
